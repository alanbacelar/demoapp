<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"  android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    android:elevation="4dp">

<RelativeLayout
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cardview_person_image"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:src="@mipmap/ic_launcher"
        android:layout_margin="5dp"
        android:longClickable="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CardView"
        android:id="@+id/cardview_person_name"
        android:layout_alignTop="@+id/cardview_person_image"
        android:layout_toEndOf="@+id/cardview_person_image"
        android:layout_alignBottom="@+id/cardview_person_image"
        android:textSize="25sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Card"
        android:id="@+id/cardview_person_email"
        android:textSize="15sp"
        android:textIsSelectable="false"
        android:layout_alignBottom="@+id/cardview_person_name"
        android:layout_alignStart="@+id/cardview_person_name" />
</RelativeLayout>


</android.support.v7.widget.CardView>